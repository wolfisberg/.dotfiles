{
    "workbench.colorTheme": "Tokyo Night Storm",
    "keyboard.dispatch": "keyCode",
    "editor.lineNumbers": "relative",
    "workbench.colorCustomizations": {
        "editorLineNumber.activeForeground": "#cccc33",
        "editorLineNumber.foreground": "#bbbbbb"
    },
    "workbench.tree.indent": 24,
    "workbench.tree.renderIndentGuides": "always",
    "editor.fontSize": 13,
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 1,
    "window.restoreWindows": "none",
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // NAVIGATION
        {
            "before": [ "<C-d>" ],
            "after": [ "<S-m>", "0", "<C-d>" ]
        },
        {
            "before": [ "<C-u>" ],
            "after": [ "<S-m>", "0", "<C-u>" ]
        },
        // PROJECT NAVIGATION
        {
            "before": [ "<leader>", "r", "f" ],
            "commands": [ "workbench.action.openRecent" ]
        },
        {
            "before": [ "<leader>", "f", "f" ],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before": [ "<leader>", "f", "s" ],
            "commands": [ "workbench.action.showAllSymbols" ]
        },
        {
            "before": [ "<leader>", "f", "e" ],
            "commands": [ "workbench.action.findInFiles" ]
        },
        {
            "before": [ "<leader>", "f", "a" ],
            "commands": [ "workbench.action.showCommands" ]
        },
        // WINDOWS
        {
            "before": [ "<leader>", "w", "p" ],
            "commands": [ "workbench.view.explorer" ]
        },
        {
            "before": [ "<leader>", "w", "d" ],
            "commands": [ "workbench.view.debug" ]
        },
        {
            "before": [ "<leader>", "w", "x" ],
            "commands": [ "workbench.view.extensions" ]
        },
        {
            "before": [ "<leader>", "w", "f" ],
            "commands": [ "workbench.view.search" ]
        },
        {
            "before": [ "<leader>", "w", "t" ],
            "commands": [ "terminal.focus" ]
        },
        {
            "before": [ "<leader>", "w", "o" ],
            "commands": [ "workbench.panel.output.focus" ]
        },
        {
            "before": [ "<leader>", "w", "e" ],
            "commands": [ "workbench.action.problems.focus" ]
        },
        {
            "before": [ "<leader>", "w", "h" ],
            "commands": [ "workbench.action.closeSidebar" ]
        },
        {
            "before": [ "<leader>", "w", "m" ],
            "commands": [ "docsView.documentation.focus" ]
        },
        // CODE NAVIGATION
        {
            "before": [ "g", ";" ],
            "commands": [ "workbench.action.navigateToLastEditLocation" ]
        },
        {
            "before": [ "<leader>", "g", "d" ],
            "commands": [ "editor.action.revealDefinition" ]
        },
        {
            "before": [ "<leader>", "q", "d" ],
            "commands": [ "editor.action.peekDefinition" ]
        },
        {
            "before": [ "<leader>", "q", "D" ],
            "commands": [ "editor.action.showDefinitionPreviewHover" ]
        },
        {
            "before": [ "<leader>", "g", "t" ],
            "commands": [ "editor.action.goToTypeDefinition" ]
        },
        {
            "before": [ "<leader>", "q", "t" ],
            "commands": [ "editor.action.peekTypeDefinition" ]
        },
        {
            "before": [ "<leader>", "g", "D" ],
            "commands": [ "editor.action.goToDeclaration" ]
        },
        {
            "before": [ "<leader>", "g", "o" ],
            "commands": [ "editor.action.openDeclarationToTheSide" ]
        },
        {
            "before": [ "<leader>", "o" ],
            "commands": [ "workbench.action.gotoSymbol" ]
        },
        {
            "before": [ "<leader>", "g", "i" ],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": [ "<leader>", "g", "I" ],
            "commands": [ "references-view.findImplementations" ]
        },
        {
            "before": [ "<leader>", "q", "i" ],
            "commands": [ "editor.action.peekImplementation" ]
        },
        {
            "before": [ "<leader>", "g", "u" ],
            "commands": [ "editor.action.goToReferences" ]
        },
        {
            "before": [ "<leader>", "q", "u" ],
            "commands": [ "editor.action.referenceSearch.trigger" ]
        },
        {
            "before": [ "<leader>", "q", "m" ],
            "commands": [ "editor.action.showHover" ]
        },
        {
            "before": [ "<leader>", "q", "M" ],
            "commands": [ "editor.debug.action.showDebugHover" ]
        },
        // REFACTOR
        {
            "before": [ "<leader>", "r", "m" ],
            "commands": [ "editor.action.refactor" ]
        },
        {
            "before": [ "<leader>", "r", "r" ],
            "commands": [ "editor.action.rename" ]
        },
        // DEBUG
        {
            "before": [ "<leader>", "d", "d" ],
            "commands": [ "workbench.action.debug.start" ]
        },
        {
            "before": [ "<leader>", "d", "r" ],
            "commands": [ "workbench.action.debug.run" ]
        },
        {
            "before": [ "<leader>", "d", "c", "d" ],
            "commands": [ "debug.startFromConfig" ]
        },
        {
            "before": [ "<leader>", "d", "s" ],
            "commands": [ "workbench.action.debug.stop" ]
        },
        {
            "before": [ "<leader>", "d", "e" ],
            "commands": [ "workbench.debug.action.focusRepl" ]
            // "commands": [ "workbench.debug.action.toggleRepl" ]
            // "commands": [ "editor.debug.action.selectionToRepl" ]
        },
        {
            "before": [ "<leader>", "d", "b" ],
            "commands": [ "editor.debug.action.toggleBreakpoint" ]
        },
        // MISC
        {
            "before": [ "<leader>", "c", "f" ],
            "commands": [ "editor.action.formatDocument" ]
        },
    ],
    "workbench.activityBar.visible": false,
    "workbench.editor.showTabs": false,
    "go.toolsManagement.autoUpdate": true,
    "workbench.editor.limit.enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${env:HOME}/.local/bin/black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintPath": "${env:HOME}/.local/bin/pylint",
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pycodestylePath": "${env:HOME}/.local/bin/pycodestyle",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${env:HOME}/.local/bin/flake8",
    "python.linting.flake8Args": ["--max-line-length=120", "--ignore=E203,F841"],
    "python.workspaceSymbols.enabled": true,
    "python.analysis.memory.keepLibraryAst": true,
    "python.diagnostics.sourceMapsEnabled": true,
    "python.languageServer": "Microsoft",
    "lua-local.interpreter": "lua",
    "editor.semanticHighlighting.enabled": true,
    "Lua.telemetry.enable": false
}